<Window x:Class="VideoTrimmer.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoTrimmer"
        mc:Ignorable="d"
        Title="Downloading..." Height="100" Width="500" Background="#FF212121" ResizeMode="NoResize">
    <Grid Margin="20,20,20,20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <ProgressBar Name="DownloadProgressBar" HorizontalAlignment="Center" Height="22" VerticalAlignment="Center" Width="390" IsEnabled="False" FontSize="14" Padding="0,-2,0,0" Template="{DynamicResource ProgressBarControlTemplate}" />
            <Label Name="DownloadProgressValue" HorizontalAlignment="Center" VerticalAlignment="Center" Content="0%" Foreground="Black" Margin="0,-24,0,-0.3" />
        </StackPanel>
    </Grid>
</Window>
